#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2

mkdir -p $CACHE_DIR

if [ -d $CACHE_DIR/.local ]; then
  cp -r $CACHE_DIR/.local $HOME/
else
  echo "Build roswell"
  git clone -b release https://github.com/roswell/roswell
  pushd roswell
  sh bootstrap
  ./configure --prefix ~/.local/
  make && make install
  popd
fi 

ROSWELL=$HOME/.local/bin/ros

if [ -d $CACHE_DIR/.cache ]; then
  cp -r $CACHE_DIR/.cache $HOME/
fi

if [ -d $CACHE_DIR/.roswell ]; then
  cp -r $CACHE_DIR/.roswell $HOME/
else
  echo "Setup roswell"
  $ROSWELL setup
fi

$ROSWELL --version

if [ -f "$BUILD_DIR/.roswell-install-list" ]; then
  for i in $(cat "$BUILD_DIR/.roswell-install-list")
  do
    $ROSWELL install $i
  done
else
  echo "Skip .roswell-install-list"
fi

if [ -f "$BUILD_DIR/.roswell-use" ]; then
  $ROSWELL use $(cat "$BUILD_DIR/.roswell-use")
else
  echo "Skip .roswell-use"
fi

$ROSWELL run -- --version

if [ -f "$BUILD_DIR/.roswell-quickload-list" ]; then
  for i in $(cat "$BUILD_DIR/.roswell-quickload-list")
  do
    $ROSWELL run -e "(ql:quickload :$i)" -q
  done
fi

echo "Copy .local/"
if [ ! -d $CACHE_DIR/.local ]; then
  cp -rf $HOME/.local/ $CACHE_DIR/
fi

echo "Copy .cache/"
rm -rf $CACHE_DIR/.cache/
cp -rf $HOME/.cache/ $CACHE_DIR/

echo "Copy .roswell/"
rm -rf $CACHE_DIR/.roswell/
cp -rf $HOME/.roswell/ $CACHE_DIR/

mkdir -p $BUILD_DIR/.profile.d
PROFILE_PATH=$BUILD_DIR/.profile.d/buildpack-roswell.sh
echo 'export PATH="$HOME/.roswell/bin:$HOME/.local/bin:$PATH"' >> $PROFILE_PATH

